<% if @patron %>
  <h1><%= @patron.name %></h1>

  <p><em>Name:</em> <%= @patron.name %></p>
  <p><em>Email:</em> <%= @patron.email %></p>
  <p><a href="/patrons/<%= @patron.id %>/edit">Edit</a></p>
<% else %>
  <p>No Patron of that ID exists</p>
<% end %>


<p><a href="/patrons">Back to All Patrons</a></p>