<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 title">
      <h1>Edit: <%= @book.title %></h1>
    </div>
  </div>
    <hr>

    <!-- TITLE AND NAV BAR -->
    <div class="row nav">
      <div class="col-sm-6 col-sm-offset-6">
        <div class ="col-xs-3" style="text-align:center">
          <a href="/books">
            <p>Books</p>
          </a>
        </div>
        <div class ="col-xs-3" style="text-align:center">
          <a href="/patrons">
            <p><span>|</span>Patrons</p>
          </a>
        </div>
        <div class ="col-xs-3" style="text-align:center">
          <a href="/staff">
            <p><span>|</span>Staff</p>
          </a>
        </div>
        <div class ="col-xs-3" style="text-align:center">
          <a href="/libraries">
            <p><span>|</span>Libraries</p>
          </a>
        </div>
      </div>
    </div>
   <hr>

   <!-- EDIT CHOSEN BOOK -->

<form action="/books/<%= @book.id %>" method="post">
  <div class="form-group">
    Title:<input class="form-control" type="text" name="title" value="<%= @book.title %>"><br>
  </div>
  <div class="form-group">
    Author:<input class="form-control" type="text" name="author" value="<%= @book.author %>"><br>
  </div>
  <div class="form-group">
    ISBN:<input class="form-control" type="text", name="isbn" value="<%= @book.isbn %>"><br>
  </div>
<!--   # vvv select menu bc book belongs to library
 -->
  <div class="form-group">
  Library Location:
    <select class="form-control" name="library_id">
      <option>No Library</option>
  	    <% @libraries.each do |library| %>
  	      <% if library.id == @book.library_id%>
  	        <% selected = "selected" %>
  	      <% else %>
  	        <% selected = "" %>
  	      <% end %>
       <option value="<%= library.id %>" <%= selected %>>
         <%= library.branch_name %></option>
      <% end %>
    </select><br>
  </div>
<!--   # vvv select menu bc book belongs to patron
 --> 
  <div class="form-group">
  Patron Name:
   <select class="form-control" name="patron_id">
      <option>No Patron</option>
  	    <% @patrons.each do |patron| %>
  	      <% if patron.id == @book.patron_id %>
  	        <% selected = "selected" %>
  	      <% else %>
  	        <% selected = "" %>
  	      <% end %>
       <option value="<%= patron.id %>" <%= selected %>>
         <%= patron.name %></option>
      <% end %>
    </select>
  </div>
  <input class="btn btn-primary" type="submit" value="Update Book!">
</form>
